<?xml version="1.0" encoding="UTF-8"?>
<!--
	Ant build script for the core library
-->
<project default="com">
	<property name="bin.dir" value="D:/Development/Java/lib/npw/" />
	
	<!-- npw release -->
	<property name="core-version" value="1.0.2" />
	
	<!-- compile all files into classes -->
	<target name="compile">
		<javac includeantruntime="false" srcdir="./src/com/nullpointerworks/" destdir="bin/" />
		<javac includeantruntime="false" srcdir="./src/exp/nullpointerworks/" destdir="bin/" />
	</target>
			
	<!-- jar makers -->
	<target name="com" depends="compile">
		<jar destfile="${bin.dir}/libnpw-core-${core-version}.jar">
	        <fileset dir="bin/" includes="com/nullpointerworks/core/**/*.class" />
	        <fileset dir="bin/" includes="exp/nullpointerworks/core/**/*.class" />
	        <fileset dir="src/" includes="com/nullpointerworks/core/**/*.java" />
	        <fileset dir="src/" includes="exp/nullpointerworks/core/**/*.java" />
	    </jar>
	</target>
	
</project>